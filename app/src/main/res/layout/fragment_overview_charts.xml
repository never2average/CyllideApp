<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".portfolio.tabs.SummaryFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/current_price_chart_tv"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:textSize="25sp"
                        android:textColor="#fff"
                        android:textStyle="bold"
                        android:text="1234.56"
                        android:gravity="center"/>
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_marginStart="20dp"
                        android:layout_height="350dp"
                        app:cardElevation="7dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="100dp"
                        android:layout_marginBottom="5dp">

                        <com.github.mikephil.charting.charts.LineChart
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/linechart"/>

                    </com.google.android.material.card.MaterialCardView>


                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_marginStart="20dp"
                        android:layout_height="350dp"
                        app:cardElevation="7dp"
                        android:visibility="gone"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="100dp"
                        android:layout_marginBottom="5dp">



                        <WebView
                            android:id="@+id/web_view_chart"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"></WebView>

                        <pl.droidsonroids.gif.GifImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:id="@+id/chart_activity_loading"
                            android:layout_gravity="center"
                            android:src="@drawable/web_view_loading"/>

                    </com.google.android.material.card.MaterialCardView>
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="0.5"
                android:padding="5dp">

                <com.google.android.material.button.MaterialButton
                    android:textColor="@color/colorPrimary"
                    android:backgroundTint="@color/white"
                    android:id="@+id/chart_button_one_day"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="1D"
                    android:textSize="14sp"
                    android:layout_marginStart="1dp"
                    android:layout_marginEnd="1dp"/>
                <com.google.android.material.button.MaterialButton
                    android:textColor="@color/colorPrimary"
                    android:backgroundTint="@color/white"
                    android:layout_width="0dp"
                    android:id="@+id/chart_button_five_days"
                    android:layout_height="match_parent"
                    android:text="5D"
                    android:textSize="14sp"
                    android:layout_weight="1"
                    android:layout_marginStart="1dp"
                    android:layout_marginEnd="1dp"/>
                <com.google.android.material.button.MaterialButton
                    android:textColor="@color/colorPrimary"
                    android:backgroundTint="@color/white"
                    android:layout_width="0dp"
                    android:text="1M"
                    android:id="@+id/chart_button_one_month"
                    android:textSize="14sp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="1dp"
                    android:layout_marginEnd="1dp"/>
                <com.google.android.material.button.MaterialButton
                    android:textColor="@color/colorPrimary"
                    android:backgroundTint="@color/white"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/chart_button_six_months"
                    android:text="6M"
                    android:textSize="14sp"
                    android:layout_marginStart="1dp"
                    android:layout_marginEnd="1dp"/>
                <com.google.android.material.button.MaterialButton
                    android:textColor="@color/colorPrimary"
                    android:backgroundTint="@color/white"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="1Y"
                    android:id="@+id/chart_button_one_year"
                    android:textSize="14sp"
                    android:layout_marginStart="1dp"
                    android:layout_marginEnd="1dp"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</FrameLayout>