<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Portfolio.PortfolioActivity"
    android:id="@+id/portfolio_layout"
    android:orientation="vertical"
    >


    <FrameLayout
        android:layout_marginTop="0dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:id="@+id/portfolio_container"
        android:background="@android:color/transparent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="20dp"
            app:cardElevation="7dp">

            <WebView
                android:id="@+id/web_view_chart_portfolio"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:gravity="center"
                android:layout_marginBottom="15dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp">

                <com.nex3z.togglebuttongroup.SingleSelectToggleGroup
                    android:id="@+id/Position_choices"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:tbgCheckedButton="@+id/nifty_one_day"
                    app:tbgFlow="false"
                    app:tbgChildSpacing="auto"
                    >


                    <com.nex3z.togglebuttongroup.button.LabelToggle
                        android:id="@+id/nifty_one_day"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="1 D"
                        android:layout_margin="2dp"/>

                    <com.nex3z.togglebuttongroup.button.LabelToggle
                        android:id="@+id/nifty_one_wk"
                        android:layout_width="wrap_content"
                        android:layout_margin="2dp"
                        android:layout_height="match_parent"
                        android:text="1 W"/>
                    <com.nex3z.togglebuttongroup.button.LabelToggle
                        android:id="@+id/nifty_one_mon"
                        android:layout_margin="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="1 M"/>

                    <com.nex3z.togglebuttongroup.button.LabelToggle
                        android:id="@+id/nifty_six_mon"
                        android:layout_width="wrap_content"
                        android:layout_margin="2dp"
                        android:layout_height="match_parent"
                        android:text="6 M"/>
                        <com.nex3z.togglebuttongroup.button.LabelToggle
                            android:id="@+id/nifty_one_yr"
                            android:layout_width="wrap_content"
                            android:layout_margin="2dp"
                            android:layout_height="match_parent"
                            android:text="1 Y"/>
                </com.nex3z.togglebuttongroup.SingleSelectToggleGroup>


            </LinearLayout>



            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp"
                android:layout_marginBottom="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical|right"
                            android:text="Previous Close"
                            android:paddingEnd="2dp"
                            android:textSize="20sp"/>
                        <TextView
                            android:id="@+id/previous_close_value"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical|start"
                            android:textSize="20sp"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical|right"
                            android:paddingEnd="2dp"
                            android:text="Open"
                            android:textSize="20sp"/>
                        <TextView
                            android:id="@+id/open_value"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical|start"
                            android:textSize="20sp"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical|right"
                            android:paddingEnd="2dp"
                            android:text="Day's Range"
                            android:textSize="20sp"/>
                        <TextView
                            android:id="@+id/days_range_value"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical|start"
                            android:textSize="20sp"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical|right"
                            android:paddingEnd="2dp"
                            android:text="52-week Range"
                            android:textSize="20sp"/>
                        <TextView
                            android:id="@+id/week_range_value"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical|start"
                            android:textSize="20sp"/>

                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>


    </FrameLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="12dp">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            app:cardCornerRadius="15dp"
            android:id="@+id/stockchooser"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp"
            app:cardBackgroundColor="@color/colorPrimaryDark"
            android:layout_height="match_parent"
            app:cardElevation="8dp"
            android:layout_weight="1">

        <LinearLayout
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:contentDescription="Choose Stocks"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:src="@drawable/stockanalysis"/>

        </LinearLayout>
        </com.google.android.material.card.MaterialCardView>


        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            app:cardCornerRadius="15dp"
            android:id="@+id/portfolio_positions"
            app:cardBackgroundColor="@color/colorPrimaryDark"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:contentDescription="Portfolio Positions"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:src="@drawable/portfoliopositions"/>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            app:cardCornerRadius="15dp"
            android:id="@+id/order_history"
            app:cardBackgroundColor="@color/colorPrimaryDark"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:contentDescription="Order History"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:src="@drawable/orders_pending"/>
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>


</LinearLayout>