<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:swipedeck="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".portfolio.PortfolioGameHomeActivity">


    <LinearLayout
        android:id="@+id/portfoliogametabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="@dimen/margin"
            android:id="@+id/portfolio_game_portfolio_back_button"
            android:src="@drawable/ic_arrow_back_black_24dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/pg_portfolio_activity_1"
                android:src="@drawable/graph_icon"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:padding="@dimen/margin"
                android:layout_height="match_parent" />
            <ImageView
                android:id="@+id/pg_portfolio_activity_2"
                android:src="@drawable/portfolio_icon"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:padding="@dimen/margin"
                android:layout_height="match_parent"
                android:background="@drawable/tab_selector"/>
            <ImageView
                android:id="@+id/pg_portfolio_activity_3"
                android:src="@drawable/award_icon"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:padding="@dimen/margin"
                android:layout_height="match_parent" />
        </LinearLayout>

    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@id/portfoliogametabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></androidx.recyclerview.widget.RecyclerView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TOTAL"
            android:layout_gravity="start"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2000"
            android:layout_margin="@dimen/default_background_stroke_width"
            android:textAlignment="textEnd"
            android:layout_gravity="end"/>

    </LinearLayout>

</RelativeLayout>