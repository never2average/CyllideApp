<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:layout_marginBottom="5dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10">
            <LinearLayout
                android:layout_width="0.0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/colorPrimary"
                android:layout_weight="1"
                android:gravity="center">
                <androidx.appcompat.widget.AppCompatImageButton
                    android:layout_width="match_parent"
                    android:layout_height="27dp"
                    android:backgroundTint="@color/colorPrimary"
                    android:tint="@color/white"
                    android:id="@+id/upButton"
                    android:clickable="true"
                    android:src="@drawable/ic_keyboard_arrow_up_black_24dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:id="@+id/upvoteCount"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:textSize="22dp"
                    android:inputType="number"
                    android:lines="1"
                    android:paddingBottom="3dp"/>
                <androidx.appcompat.widget.AppCompatImageButton
                    android:layout_width="match_parent"
                    android:layout_height="27dp"
                    android:clickable="true"
                    android:backgroundTint="@color/colorPrimary"
                    android:id="@+id/downButton"
                    android:tint="@color/white"
                    android:src="@drawable/ic_keyboard_arrow_down_black_24dp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="0.0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="9">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/answer_tv"
                    android:layout_margin="10dp"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:text="This is the answer to the question."/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/accentBlue"
                    android:weightSum="2">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:background="@color/accentBlue"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:weightSum="2">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:textAlignment="viewStart"
                            android:text="Answered by:"
                            android:textSize="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginHorizontal="10dp"
                            android:textColor="@color/white"
                            android:layout_weight="1"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:id="@+id/answered_by_tv"
                            android:textAlignment="viewStart"
                            android:text="Knowledge"
                            android:textSize="14dp"
                            android:lines="1"
                            android:layout_marginBottom="5dp"
                            android:layout_marginHorizontal="10dp"
                            android:textColor="@color/white"
                            android:layout_weight="1"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_gravity="end"
                        android:weightSum="2">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_gravity="end"
                            android:text="on:"
                            android:textSize="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginHorizontal="10dp"
                            android:textColor="@color/white"
                            android:layout_weight="1"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:id="@+id/answered_on_tv"
                            android:layout_gravity="end"
                            android:text="25/03/2019"
                            android:textSize="14dp"
                            android:lines="1"
                            android:layout_marginBottom="5dp"
                            android:layout_marginHorizontal="10dp"
                            android:textColor="@color/white"
                            android:layout_weight="1"
                            />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>