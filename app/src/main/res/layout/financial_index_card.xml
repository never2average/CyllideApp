<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/findexcard">


    <com.google.android.material.card.MaterialCardView
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="3dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingStart="4dp"
            android:paddingEnd="4dp">

            <TextView
                android:textSize="16dp"
                android:text="NIFTY AUTO"
                android:gravity="center_vertical"
                android:id="@+id/indexName"
                android:layout_width="0dp"
                android:layout_weight="6"
                android:layout_height="match_parent"/>

            <TextView
                android:textSize="16dp"
                android:text="156.82(+3.8%)"
                android:gravity="center"
                android:id="@+id/indexValue"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="match_parent"/>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
    <net.cachapa.expandablelayout.ExpandableLayout
        android:id="@+id/expandableindexoptions"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:el_duration="800"
        app:el_expanded="false"
        app:el_parallax="0.5">
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            app:cardBackgroundColor="@color/primary_light"
            android:layout_height="match_parent">
            <LinearLayout
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:id="@+id/purchasebtn"
                    android:src="@drawable/ic_view_eye"/>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:src="@drawable/stats_icon"
                    android:id="@+id/analyzebtn"
                    />


            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </net.cachapa.expandablelayout.ExpandableLayout>

</LinearLayout>