<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".quiz.QuizRulesActivity"
    android:orientation="vertical"
    android:background="@color/hourglass_color">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:padding="0dp"
        android:background="@color/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        >

        <RelativeLayout
            android:layout_marginLeft="0dp"
            android:paddingLeft="0dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <ImageView
                android:layout_margin="4dp"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:padding="6dp"
                android:id="@+id/activity_quiz_rules_back_button"
                android:src="@drawable/ic_arrow_back_black_24dp"
                android:tint="@color/white"
                android:background="@color/transparent"/>



            <TextView
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content"
                android:text='Quiz'
                android:textSize="21sp"
                android:gravity="center"
                android:textColor="#fff"
                android:layout_toRightOf="@+id/activity_quiz_rules_back_button" />






        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    <pl.droidsonroids.gif.GifImageView
        android:layout_margin="4dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:src="@drawable/quiz_waiting"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/startQuizButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="16dp"
        android:padding="15dp"
        android:text="QUIZ STARTS IN LOADING.."
        app:cornerRadius="7dp" />



    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardElevation="3dp"
        app:cardCornerRadius="5dp"
        android:padding="8dp">
        <LinearLayout
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PRIZE MONEY"
                android:textAlignment="center"
                android:textSize="26sp"
                android:layout_margin="2dp"/>

            <TextView
                android:id="@+id/quiz_rules_qrize_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="26sp"
                android:layout_margin="2dp"/>



        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>



    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardElevation="3dp"
        app:cardCornerRadius="5dp"
        android:padding="8dp">
        <LinearLayout
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="RULES"
                android:textAlignment="center"
                android:textSize="26sp"
                android:layout_margin="2dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:textSize="17sp"
                android:layout_margin="4dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:text="1. Answer all questions correctly to win."/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:textSize="17sp"
                android:layout_margin="4dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:text="2. If you tap on an incorrect answer or run out of time, you get eliminated."/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:textSize="17sp"
                android:layout_margin="4dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:text="3. You can use hearts as a revival option to continue playing."/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:textSize="17sp"
                android:layout_margin="4dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:text="4. A maximum of 2 extra lives can be applied per game except the last question."/>




        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </ScrollView>

</LinearLayout>