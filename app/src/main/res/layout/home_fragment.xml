<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fcfcfc"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingStart="18dp"
    android:paddingEnd="18dp"
    android:paddingTop="55dp"
    android:paddingBottom="20dp"
    android:layout_marginBottom="100dp"
    >


    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginBottom="6dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:baselineAligned="false"
        android:clipToPadding="false"
        android:gravity="center"
        android:orientation="horizontal">
    
    
        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            app:cardCornerRadius="5dp"
            android:layout_margin="5dp"
            android:layout_marginRight="32dp"
            android:layout_marginLeft="32dp"
            android:id="@+id/storiescard"
            android:elevation="5dp"
            android:padding="16dp"
            app:cardElevation="5dp"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/stories"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="3"
                    android:padding="20dp"
                    android:elevation="10dp"
                    app:actualImageResource="@mipmap/storieslogo"
                    app:roundAsCircle="true" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="Stories"
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:textSize="19sp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_weight="1"
            app:cardCornerRadius="5dp"
            android:padding="16dp"
            android:id="@+id/contestcard"
            android:layout_margin="5dp"
            android:layout_marginRight="32dp"
            android:layout_marginLeft="32dp"
            android:layout_height="match_parent"
            app:cardElevation="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:padding="20dp"
                    android:id="@+id/contest"
                    app:actualImageResource="@mipmap/contestlogo"
                    app:roundAsCircle="true"
                    android:elevation="10dp"
                    android:layout_weight="3"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="Contest"
                    android:textSize="19sp"
                    android:textColor="#000"
                    />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:baselineAligned="false"
        android:clipToPadding="false"
        android:gravity="center"
        android:orientation="horizontal">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            app:cardCornerRadius="5dp"
            android:id="@+id/portfoliocard"
            android:elevation="5dp"
            android:padding="16dp"
            app:cardElevation="5dp"
            android:layout_margin="5dp">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <com.facebook.drawee.view.SimpleDraweeView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="3"
                    android:padding="20dp"
                    app:actualImageResource="@mipmap/portfoliologo"
                    app:roundAsCircle="true"
                    android:elevation="10dp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:padding="8dp"
                    android:layout_weight="1"
                    android:text="Portfolios"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:textSize="19sp"
                    />
            </LinearLayout>


        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            app:cardCornerRadius="5dp"
            android:id="@+id/quizcard"
            app:cardElevation="5dp"
            android:padding="16dp"
            android:layout_margin="5dp">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <com.facebook.drawee.view.SimpleDraweeView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="3"
                    android:padding="20dp"
                    app:actualImageResource="@mipmap/quizlogo"
                    app:roundAsCircle="true"
                    android:elevation="10dp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:padding="8dp"
                    android:layout_weight="1"
                    android:text="Quiz"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:textSize="19sp"
                    />
            </LinearLayout>


        </com.google.android.material.card.MaterialCardView>



    </LinearLayout>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        app:cardCornerRadius="5dp"
        android:id="@+id/forumcard"
        app:cardElevation="5dp"
        android:padding="16dp"
        android:layout_margin="5dp">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <com.facebook.drawee.view.SimpleDraweeView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="20dp"
                android:layout_gravity="center"
                app:actualImageResource="@mipmap/forumlogo"
                app:roundAsCircle="true"
                android:elevation="10dp"
                />
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:padding="8dp"
                android:layout_marginRight="8dp"
                android:text="Forum"
                android:gravity="center"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="19sp"
                />
        </LinearLayout>


    </com.google.android.material.card.MaterialCardView>


</LinearLayout>