<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
xmlns:fresco="http://schemas.android.com/apk/res-auto"
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:paddingVertical="@dimen/margin"
android:id="@+id/newsll"
android:paddingHorizontal="@dimen/margin">


<com.google.android.material.card.MaterialCardView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="5dp"
    >

    <LinearLayout
        android:layout_margin="@dimen/default_background_stroke_width"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/news_image_view"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="fitXY"
            android:layout_gravity="center_horizontal"
            fresco:placeholderImage="@android:drawable/ic_menu_camera"
            android:clickable="true"/>

        <TextView
            android:id="@+id/news_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10sp"
            android:textSize="22sp"
            android:padding="8dp"
            android:fontFamily="@font/ralewaymedium"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:clickable="true"/>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:id="@+id/news_source"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:id="@+id/news_date"/>

        </LinearLayout>


        <TextView
            android:paddingStart="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ralewaylight"
            android:textColor="#232323"
            android:id="@+id/news_desc"/>




    </LinearLayout>

</com.google.android.material.card.MaterialCardView>

</LinearLayout>
