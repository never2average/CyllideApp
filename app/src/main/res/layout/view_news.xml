<?xml version="1.0" encoding="utf-8"?>


<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/margin"
    app:cardElevation="5dp"
    android:outlineAmbientShadowColor="@android:color/black"
    android:layout_margin="6dp">


    <LinearLayout
        xmlns:fresco="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/newsll"
        android:outlineAmbientShadowColor="@color/black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/news_image_view"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="fitXY"
            android:layout_gravity="center_horizontal"
            fresco:placeholderImage="@android:drawable/ic_menu_camera"
            android:clickable="true"/>

        <TextView
            android:id="@+id/news_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/margin"
            android:layout_marginHorizontal="@dimen/default_background_stroke_width"
            android:textSize="22sp"
            android:fontFamily="@font/ralewaymedium"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:clickable="true"/>

        <LinearLayout
            android:layout_marginHorizontal="@dimen/default_background_stroke_width"
            android:layout_marginVertical="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:id="@+id/news_source"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:id="@+id/news_date"/>

        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#232323"
            android:layout_margin="@dimen/default_stroke_width"
            android:id="@+id/news_desc"/>

        <TextView
            android:layout_margin="@dimen/default_background_stroke_width"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Read More"
            android:textColor="@color/colorPrimary"
            android:textSize="13sp" />

    </LinearLayout>
</LinearLayout>

</com.google.android.material.card.MaterialCardView>

