<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:swipedeck="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".portfolio.PortfolioGameHomeActivity">


    <LinearLayout
        android:weightSum="3"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"/>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/portfoliogametabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <!--<ImageView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="match_parent"-->
            <!--android:padding="@dimen/margin"-->
            <!--android:id="@+id/portfolio_game_back_button"-->
            <!--android:src="@drawable/ic_arrow_back_black_24dp"-->
            <!--/>-->

        <com.google.android.material.tabs.TabItem
            android:id="@+id/pg_home_activity_1"
            android:src="@drawable/graph_icon"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="@dimen/margin"
            android:layout_height="match_parent"
            android:background="@drawable/tab_selector"/>
        <com.google.android.material.tabs.TabItem
            android:padding="@dimen/margin"
            android:id="@+id/pg_home_activity_2"
            android:src="@drawable/portfolio_icon"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            />
        <com.google.android.material.tabs.TabItem
            android:id="@+id/pg_home_activity_3"
            android:src="@drawable/award_icon"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="@dimen/margin"
            android:layout_height="match_parent"
            />

    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager.widget.ViewPager
        android:layout_below="@id/portfoliogametabs"
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false">

    </androidx.viewpager.widget.ViewPager>


</RelativeLayout>