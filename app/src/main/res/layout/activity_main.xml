<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    xmlns:fab="http://schemas.android.com/apk/res-auto"

    >

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/colorPrimary"
        android:elevation="4dp"
        android:paddingLeft="0dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="59dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:contentDescription="companyLogo"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:src="@drawable/logo" />

            <TextView
                android:id="@+id/heading"
                android:layout_width="0dp"
                android:fontFamily="@font/open_sans"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="4"
                android:gravity="center"
                android:paddingEnd="8dp"
                android:text='@string/app_name'
                android:textColor="#fff"

                android:textSize="24sp" />


        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
            android:id="@+id/fragment_container"

        >

    </FrameLayout>

    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/fabMenu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="11dp"
        android:src="@drawable/bottom"
        android:layout_alignParentLeft="true"
        android:layout_gravity="bottom|right"
        android:layout_marginRight="0dp"
        android:layout_marginLeft="0dp"
        fab:menu_fab_size="normal"
        fab:menu_showShadow="true"
        fab:menu_shadowColor="#66000000"
        fab:menu_shadowRadius="4dp"
        fab:menu_shadowXOffset="1dp"
        fab:menu_shadowYOffset="3dp"
        fab:menu_colorNormal="@color/colorPrimary"
        fab:menu_colorPressed="@color/colorPrimary"
        fab:menu_colorRipple="#99FFFFFF"
        fab:menu_animationDelayPerItem="50"
        fab:menu_icon="@drawable/bottom"
        fab:menu_buttonSpacing="0dp"
        fab:menu_labels_margin="0dp"
        fab:menu_labels_paddingTop="4dp"
        fab:menu_labels_paddingRight="8dp"
        fab:menu_labels_paddingBottom="4dp"
        fab:menu_labels_paddingLeft="8dp"
        fab:menu_labels_padding="8dp"
        fab:menu_labels_textColor="#FFFFFF"
        fab:menu_labels_textSize="14sp"
        fab:menu_labels_cornerRadius="3dp"
        fab:menu_labels_colorNormal="@color/colorPrimary"
        fab:menu_labels_colorPressed="@color/primary_light_max"
        fab:menu_labels_colorRipple="@color/primary_light_max"
        fab:menu_labels_showShadow="true"
        fab:menu_labels_singleLine="false"
        fab:menu_labels_ellipsize="none"
        fab:menu_labels_maxLines="-1"
        fab:menu_labels_position="left"
        fab:menu_openDirection="up"
        fab:menu_backgroundColor="#ccffffff"
        fab:menu_fab_label=""
        >

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/user_icon"
            fab:fab_size="mini"
            fab:fab_label="Profile"
            fab:fab_colorNormal="@android:color/transparent"

            fab:fab_colorPressed="@color/primary_light_max"
            fab:fab_colorRipple="@color/primary_light_max"

            />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/home_icon"

            fab:fab_size="mini"
            fab:fab_label="Home"
            fab:fab_colorNormal="@android:color/transparent"
            fab:fab_colorPressed="@color/primary_light_max"
            fab:fab_colorRipple="@color/primary_light_max"


            />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/faq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/faq_icon"
            android:tint="@android:color/white"

            fab:fab_size="mini"
            fab:fab_label="FAQ"
            fab:fab_colorNormal="@android:color/white"
            fab:fab_colorPressed="@color/primary_light_max"
            fab:fab_colorRipple="@color/primary_light_max"

            />



        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/notification_icon"
            android:tint="@android:color/white"

            fab:fab_size="mini"
            fab:fab_label="Notification"
            fab:fab_colorNormal="@android:color/white"
            fab:fab_colorPressed="@color/primary_light_max"
            fab:fab_colorRipple="@color/primary_light_max"

            />


        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/referrals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/referral_icon"
            android:tint="@android:color/white"

            fab:fab_size="mini"
            fab:fab_label="Referrals"
            fab:fab_colorNormal="@android:color/transparent"
            fab:fab_colorPressed="@color/primary_light_max"
            fab:fab_colorRipple="@color/primary_light_max"

            />


        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/howitworks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_lightbulb_outline_black_24dp"

            fab:fab_size="mini"
            fab:fab_label="How it works"
            fab:fab_colorNormal="@android:color/white"
            fab:fab_colorPressed="@color/primary_light_max"
            fab:fab_colorRipple="@color/primary_light_max"
            />
    </com.github.clans.fab.FloatingActionMenu>



</FrameLayout>