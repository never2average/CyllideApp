<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Portfolio.PortfolioPositionsRV.PortfolioDetailActivity"
    android:orientation="vertical">

    <FrameLayout
        android:layout_marginTop="0dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:id="@+id/portfolio_container"
        android:background="@android:color/transparent"></FrameLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="12dp">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            app:cardCornerRadius="15dp"
            android:id="@+id/stockchooser"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp"
            app:cardBackgroundColor="@color/colorPrimaryDark"
            android:layout_height="match_parent"
            app:cardElevation="8dp"
            android:layout_weight="1">

            <LinearLayout
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:contentDescription="Choose Stocks"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:src="@drawable/stockanalysis"/>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>


        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            app:cardCornerRadius="15dp"
            android:id="@+id/portfolio_positions"
            app:cardBackgroundColor="@color/colorPrimaryDark"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:contentDescription="Portfolio Positions"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:src="@drawable/portfoliopositions"/>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            app:cardCornerRadius="15dp"
            android:id="@+id/order_history"
            app:cardBackgroundColor="@color/colorPrimaryDark"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:contentDescription="Order History"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:src="@drawable/orders_pending"/>
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</LinearLayout>