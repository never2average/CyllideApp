<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".portfolio.PortfolioDetailActivity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
    <ImageView
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:padding="6dp"
        android:id="@+id/activity_portfolio_detail_back_button"
        android:src="@drawable/ic_arrow_back_black_24dp"
        android:tint="@color/colorPrimary"
        android:background="@color/transparent"/>></LinearLayout>

    <FrameLayout
        android:layout_marginTop="0dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:id="@+id/portfolio_container"
        android:background="@android:color/transparent"></FrameLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.3"
        >



        <ImageView
            android:contentDescription="Choose Stocks"
            android:layout_width="0dp"
            android:id="@+id/stockchooser"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:src="@drawable/binocular"/>





        <ImageView
            android:contentDescription="Portfolio Positions"
            android:layout_width="0dp"
            android:id="@+id/portfolio_positions"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_height="match_parent"
            android:src="@drawable/briefcase"/>



        <ImageView
            android:contentDescription="Order History"
            android:layout_width="0dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:id="@+id/order_history"
            android:layout_height="match_parent"
            android:src="@drawable/history"/>


    </LinearLayout>

</LinearLayout>