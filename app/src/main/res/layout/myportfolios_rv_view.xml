<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/default_background_stroke_width">


    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        app:cardUseCompatPadding="true"
        app:cardElevation="3dp"
        android:clickable="true"
        android:focusable="true"
        android:id="@+id/my_portfolios_view_card_material"

        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="@dimen/margin"
            android:layout_marginHorizontal="@dimen/default_background_stroke_width"
            android:paddingHorizontal="@dimen/default_stroke_width"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Portfolio 1"
                android:textSize="17sp"
                android:layout_alignParentStart="true"
                android:textColor="@color/colorPrimaryDark"
                android:gravity="center_vertical"
                android:id="@+id/my_portfolios_portfolio_name"

                />


            <com.nex3z.togglebuttongroup.button.LabelToggle
                android:visibility="gone"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:textSize="12sp"
                android:contextClickable="false"
                android:longClickable="false"
                android:clickable="false"
                android:textColor="@color/colorPrimaryDark"
                android:layout_height="wrap_content"
                android:id="@+id/my_portfolios_capex"/>
        </RelativeLayout>


    </com.google.android.material.card.MaterialCardView>
</LinearLayout>