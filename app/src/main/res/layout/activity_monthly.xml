<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Contests.MonthlyActivity"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_layout"
            android:layout_width="match_parent"
            app:tabTextColor="#ffffff"
            android:layout_height="60dp"
            android:layout_gravity="left"
            android:background="@color/colorPrimary"
            app:tabGravity="fill"
            app:tabMode="fixed"/>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:padding="6dp"
            android:id="@+id/contestbackbutton"
            android:src="@drawable/ic_arrow_back_black_24dp"
            android:tint="#ffffff"
            android:background="#00000000"/>
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_height="240dp"
            android:layout_width="match_parent"
            android:id="@+id/monthly_center_image"
            android:src="@drawable/bull"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:scaleType="centerCrop"
            />
    </FrameLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="4dp"
        app:cardCornerRadius="3dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/main_ll"
                android:orientation="vertical"
                android:gravity="start"
                >
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginStart="3dp"
                    android:layout_marginEnd="3dp"
                    style="@style/Base.TextAppearance.AppCompat.Body1">

                    <com.nex3z.togglebuttongroup.SingleSelectToggleGroup
                        android:id="@+id/cap_descriptions"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:tbgCheckedButton="@id/smallcap_button"
                        app:tbgFlow="false"
                        app:tbgChildSpacing="auto"
                        >

                        <com.nex3z.togglebuttongroup.button.LabelToggle
                            android:id="@+id/smallcap_button"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Small Cap"
                            android:textSize="12sp"
                            android:layout_margin="2dp"
                            android:elevation="8dp"
                            />

                        <com.nex3z.togglebuttongroup.button.LabelToggle
                            android:id="@+id/midcap_button"
                            android:layout_width="wrap_content"
                            android:layout_margin="2dp"
                            android:layout_height="match_parent"
                            android:text="Mid Cap"
                            android:textSize="12sp"
                            android:elevation="8dp"/>
                        <com.nex3z.togglebuttongroup.button.LabelToggle
                            android:id="@+id/largecap_button"
                            android:layout_margin="2dp"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Large Cap"
                            android:textSize="12sp"
                            android:elevation="8dp"/>

                        <com.nex3z.togglebuttongroup.button.LabelToggle
                            android:id="@+id/nifty_button"
                            android:layout_width="wrap_content"
                            android:layout_margin="2dp"
                            android:layout_height="match_parent"
                            android:text="Nifty 500"
                            android:textSize="12sp"
                            android:elevation="8dp"
                            />
                    </com.nex3z.togglebuttongroup.SingleSelectToggleGroup>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:text="About"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="25dp"
                    android:textSize="12sp"
                    android:id="@+id/desc_tv"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No. of Participants : 20150"
                        />
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Join Contest"
                        android:id="@+id/join_button"/>

                </LinearLayout>
            </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
