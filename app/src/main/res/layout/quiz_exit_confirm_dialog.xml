<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="400dp"
    android:background="@drawable/quiz_wining_drawable"
    android:gravity="center_horizontal"
    android:orientation="vertical">



        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/cross_icon"
            android:tint="@color/colorPrimary"
            android:layout_gravity="right"
            android:id="@+id/quiz_exit_confirm_cross"
            />

        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Are you sure you want to exit the quiz?"
            android:textSize="23dp"
            android:gravity="center"
            android:layout_margin="@dimen/margin"
            android:textColor="#00B9FF"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/quiz_exit_confirm_yes"
                android:text="Yes"
                android:layout_alignParentStart="true" />
            <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/quiz_exit_confirm_no"
                android:layout_alignParentEnd="true"
                android:text="Yes" />

        </RelativeLayout>



    </LinearLayout>

