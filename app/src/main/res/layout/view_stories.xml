<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/margin"
    android:outlineAmbientShadowColor="@android:color/black"
    android:layout_margin="6dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardElevation="@dimen/margin"
    android:id="@+id/stories_card_view">

<LinearLayout
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/stories_image_view"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleType="fitXY"
                android:layout_gravity="center_horizontal"
                fresco:placeholderImage="@android:drawable/ic_menu_camera" />

            <TextView
                android:layout_margin="@dimen/default_background_stroke_width"
                android:id="@+id/story_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10sp"
                android:textSize="22sp"
                android:padding="8dp"
                android:fontFamily="@font/ralewaymedium"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:clickable="true"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_margin="@dimen/default_background_stroke_width"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:id="@+id/story_author"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/default_background_stroke_width"
                android:text="CASE STUDIES"
                android:textColor="@color/white"
                android:gravity="center_vertical"
                android:background="@drawable/stories_type"
                fresco:cornerRadius="@dimen/margin"
                android:id="@+id/story_tag"
                android:clickable="false"/>

            <TextView
                android:layout_margin="@dimen/default_background_stroke_width"
                android:paddingStart="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#232323"
                android:id="@+id/story_summary"/>




        </LinearLayout>
</LinearLayout>
    </com.google.android.material.card.MaterialCardView>


