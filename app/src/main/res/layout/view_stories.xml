<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="@dimen/margin"
    android:layout_marginVertical="@dimen/margin"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="5dp"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/storiesll"
   >

        <LinearLayout
            android:layout_margin="@dimen/default_background_stroke_width"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/stories_image_view"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleType="fitXY"
                android:layout_gravity="center_horizontal"
                fresco:placeholderImage="@android:drawable/ic_menu_camera"
                android:clickable="true"/>

            <TextView
                android:id="@+id/story_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10sp"
                android:textSize="22sp"
                android:padding="8dp"
                android:fontFamily="@font/ralewaymedium"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:clickable="true"/>

            <TextView
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:id="@+id/story_author"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/default_background_stroke_width"
                fresco:cornerRadius="@dimen/margin"
                android:id="@+id/story_tag"
                android:clickable="false"/>

            <TextView
                android:paddingStart="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ralewaylight"
                android:textColor="#232323"
                android:id="@+id/story_summary"/>




        </LinearLayout>
</LinearLayout>
    </com.google.android.material.card.MaterialCardView>


