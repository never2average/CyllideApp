<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/leaderboard_card_view"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginTop="0.5dp"
        app:cardElevation="2dp"
        android:layout_marginBottom="0.5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/leaderboard_rv_rank"
                android:text="1hardcoded"
                android:textSize="19sp"
                android:layout_marginHorizontal="@dimen/search_bar_right_icon_right_margin"/>

            <ImageView
                android:id="@+id/leaderboard_profile_iv"
                android:gravity="center"
                android:src="@drawable/profile_pic"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/portfolioname"
                android:text="Portfolio 1"
                android:gravity="center_vertical"
                android:textSize="14sp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:layout_marginStart="15dp"/>

            <!--This text view should have color green for positive
            and red for negative numbers in your dummy data, take only
            magnitude as double. Add percentage before settext-->

            <TextView
                android:id="@+id/portfolioreturns"
                android:text="+135%"
                android:gravity="center"
                android:textSize="16sp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"/>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>