<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_marginHorizontal="17dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        app:cardElevation="5dp"
        app:cardBackgroundColor="#41ADFF"
        android:layout_height="50dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            >
            <TextView
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:textSize="16.6sp"
                android:text="Cash Remaining"
                android:textColor="#fff"/>

            <TextView
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:textSize="16.6sp"
                android:textColor="#fff"
                android:id="@+id/balance"
                />



        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>


    <com.arlib.floatingsearchview.FloatingSearchView
        android:id="@+id/searchbarstocks"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:gravity="center"
        app:floatingSearch_clearBtnColor="#41ADFF"
        android:backgroundTint="@color/white"
        app:floatingSearch_searchBarMarginLeft="0dp"
        android:layout_marginHorizontal="16dp"
        app:floatingSearch_searchHint="Search"
        app:floatingSearch_suggestionsListAnimDuration="250"
        app:floatingSearch_showSearchKey="false"
        app:floatingSearch_leftActionColor="#41ADFF"
        app:floatingSearch_leftActionMode="showSearch"
        app:floatingSearch_close_search_on_keyboard_dismiss="true"/>

